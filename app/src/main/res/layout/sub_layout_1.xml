<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.research.robertodvp.audioanalyzer.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idLoadImageButton"
        android:text="Load Image 1"
        android:layout_below="@+id/idVisualizerView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idLoadImageButton2"
        android:text="Load Image 2"
        android:layout_below="@+id/idLoadImageButton"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/idImageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/idLoadImageButton2"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/idImageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/idLoadImageButton2"
        />

</RelativeLayout>